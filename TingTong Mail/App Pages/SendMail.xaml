                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}" >
                                <Border x:Name="Border"  BorderThickness="0,0,0,0" ClipToBounds="False" BorderBrush="White" Background="White"  CornerRadius="13,13,13,13" Margin="1,0">
